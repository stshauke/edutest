{% extends 'base.html.twig' %}

{% block title %}Choice{% endblock %}

{% block body %}
    <h1>Choice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ choice.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ choice.label }}</td>
            </tr>
            <tr>
                <th>IsCorrect</th>
                <td>{{ choice.isCorrect ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_choice_index') }}">back to list</a>

    <a href="{{ path('app_choice_edit', {'id': choice.id}) }}">edit</a>

    {{ include('choice/_delete_form.html.twig') }}
