{% extends 'base.html.twig' %}

{% block title %}Assignment{% endblock %}

{% block body %}
    <h1>Assignment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ assignment.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ assignment.status }}</td>
            </tr>
            <tr>
                <th>StartedAt</th>
                <td>{{ assignment.startedAt ? assignment.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>SubmittedAt</th>
                <td>{{ assignment.submittedAt ? assignment.submittedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_assignment_index') }}">back to list</a>

    <a href="{{ path('app_assignment_edit', {'id': assignment.id}) }}">edit</a>

    {{ include('assignment/_delete_form.html.twig') }}
