{% extends 'base.html.twig' %}

{% block title %}Créer un compte | EduTest{% endblock %}

{% block body %}
<div class="auth-wrapper d-flex align-items-center justify-content-center">
    <div class="auth-card card shadow-sm border-0">
        <div class="card-body p-4 p-md-5">

            <div class="text-center mb-4">
                <div class="auth-icon mb-2">
                    <i class="bi bi-person-plus-fill"></i>
                </div>
                <h1 class="h4 mb-1 text-primary">Créer un compte</h1>
                <p class="text-muted small mb-0">
                    Rejoignez EduTest pour passer ou organiser vos examens en ligne.
                </p>
            </div>

            {# erreurs éventuelles (email déjà pris, etc.) #}
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger small">{{ flash_error }}</div>
            {% endfor %}

            {# Formulaire d'inscription #}
            {{ form_start(registrationForm) }}

            <div class="mb-3">
                {{ form_label(registrationForm.fullName, 'Nom complet', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.fullName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.fullName) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            {# facultatif : numéro étudiant si vous l'avez dans le form #}
            {% if registrationForm.studentNumber is defined %}
                <div class="mb-3">
                    {{ form_label(registrationForm.studentNumber, 'Numéro étudiant', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.studentNumber, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.studentNumber) }}
                </div>
            {% endif %}

            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            {# case à cocher CGU si présente dans ton form #}
            {% if registrationForm.agreeTerms is defined %}
                <div class="mb-3 form-check small">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            {% endif %}

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-person-check me-1"></i> Créer mon compte
                </button>
            </div>

            <div class="text-center">
                <p class="text-muted small mb-1">Déjà un compte ?</p>
                <a href="{{ path('app_login') }}" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Se connecter
                </a>
            </div>

            {{ form_end(registrationForm) }}

        </div>
    </div>
</div>
{% endblock %}
