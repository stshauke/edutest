{% extends 'base.html.twig' %}

{% block title %}üß© Nouvelle affectation | EduTest{% endblock %}

{% block body %}
<div class="container py-5">

    <!-- En-t√™te -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h1 class="h4 text-primary mb-0">
            <i class="bi bi-people-fill me-2"></i> Nouvelle affectation d‚Äôexamen
        </h1>
        <div class="d-flex flex-wrap gap-2">
            <a href="{{ path('teacher_assignment_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Retour √† la liste
            </a>
            <a href="{{ path('app_exam_index') }}" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-journal-text"></i> Voir les examens
            </a>
        </div>
    </div>

    <!-- Message flash -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}

    <!-- Formulaire -->
    <div class="card shadow border-0">
        <div class="card-body p-4">
            <h5 class="card-title mb-3">üìù Choisir un examen et un √©tudiant</h5>

            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.exam) }}
                    {{ form_widget(form.exam, { attr: { class: 'form-select' } }) }}
                    {{ form_errors(form.exam) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.student) }}
                    {{ form_widget(form.student, { attr: { class: 'form-select' } }) }}
                    {{ form_errors(form.student) }}
                </div>

                <div class="text-end mt-4">
                    <button class="btn btn-success shadow-sm">
                        <i class="bi bi-check-circle"></i> Affecter l‚Äôexamen
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

</div>
{% endblock %}
