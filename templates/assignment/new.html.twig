{% extends 'base.html.twig' %}

{% block title %}Nouvelle affectation | EduTest{% endblock %}

{% block body %}
<div class="container-xl py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            {# ========= En-tête ========= #}
            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                <div>
                    <div class="text-uppercase small text-muted">Affectation</div>
                    <h1 class="h4 text-primary mb-0">
                        <i class="bi bi-people-fill me-2"></i>
                        Nouvelle affectation d’examen
                    </h1>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <a href="{{ path('teacher_assignment_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                    <a href="{{ path('app_exam_index') }}" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-journal-text"></i> Voir les examens
                    </a>
                </div>
            </div>

            {# ========= Messages flash ========= #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}

            {# ========= Formulaire ========= #}
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h5 class="mb-3 fw-semibold">
                        Choisir un examen et un étudiant
                    </h5>

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.exam, null, { label_attr: { class: 'form-label fw-semibold' } }) }}
                        {{ form_widget(form.exam, { attr: { class: 'form-select' } }) }}
                        {{ form_errors(form.exam) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.student, null, { label_attr: { class: 'form-label fw-semibold' } }) }}
                        {{ form_widget(form.student, { attr: { class: 'form-select' } }) }}
                        {{ form_errors(form.student) }}
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button class="btn btn-success px-4">
                            <i class="bi bi-check-circle me-1"></i>
                            Affecter l’examen
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
