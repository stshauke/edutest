{% extends 'base.html.twig' %}

{% block title %}Nouvel examen | EduTest{% endblock %}

{% block body %}
<div class="container-xl py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i> Nouvel examen
                    </h4>
                    <a href="{{ path('app_exam_index') }}" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>

                <div class="card-body p-4">
                    {{ form_start(form, {
                        attr: {
                            class: 'needs-validation',
                            novalidate: 'novalidate'
                        }
                    }) }}

                    {# Titre #}
                    <div class="mb-3">
                        {{ form_label(form.title, 'Titre de l‚Äôexamen', {
                            label_attr: { class: 'form-label fw-semibold' }
                        }) }}
                        {{ form_widget(form.title, {
                            attr: {
                                class: 'form-control',
                                placeholder: 'Ex : Math√©matiques - Chapitre 3'
                            }
                        }) }}
                        {{ form_errors(form.title) }}
                    </div>

                    {# Description #}
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {
                            label_attr: { class: 'form-label fw-semibold' }
                        }) }}
                        {{ form_widget(form.description, {
                            attr: {
                                class: 'form-control',
                                rows: 3,
                                placeholder: 'D√©crivez rapidement le contenu de l‚Äôexamen (facultatif)...'
                            }
                        }) }}
                        {{ form_errors(form.description) }}
                    </div>

                    {# Dur√©e + dates #}
                    <div class="row g-3">
                        <div class="col-md-4">
                            {{ form_label(form.durationMinutes, 'Dur√©e (minutes)', {
                                label_attr: { class: 'form-label fw-semibold' }
                            }) }}
                            {{ form_widget(form.durationMinutes, {
                                attr: {
                                    class: 'form-control',
                                    min: 1
                                }
                            }) }}
                            {{ form_errors(form.durationMinutes) }}
                        </div>

                        <div class="col-md-4">
                            {{ form_label(form.startAt, 'Date de d√©but', {
                                label_attr: { class: 'form-label fw-semibold' }
                            }) }}
                            {{ form_widget(form.startAt, {
                                attr: { class: 'form-control' }
                            }) }}
                            {{ form_errors(form.startAt) }}
                        </div>

                        <div class="col-md-4">
                            {{ form_label(form.endAt, 'Date de fin', {
                                label_attr: { class: 'form-label fw-semibold' }
                            }) }}
                            {{ form_widget(form.endAt, {
                                attr: { class: 'form-control' }
                            }) }}
                            {{ form_errors(form.endAt) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a href="{{ path('app_exam_index') }}" class="btn btn-outline-secondary">
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle me-1"></i> Cr√©er l‚Äôexamen
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            <p class="text-center text-muted small mt-3">
                üí° Les questions seront ajout√©es apr√®s la cr√©ation de l‚Äôexamen.
            </p>
        </div>
    </div>
</div>
{% endblock %}
