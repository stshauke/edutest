{% extends 'base.html.twig' %}

{% block title %}✏️ Modifier l’examen | EduTest{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Modifier un examen
            </h4>
            <small class="text-muted">ID : {{ exam.id }}</small>
        </div>

        <div class="card-body p-4">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <!-- Titre -->
            <div class="mb-3">
                {{ form_label(form.title, 'Titre de l’examen', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Mathématiques - Chapitre 3'}}) }}
                {{ form_errors(form.title) }}
            </div>

            <!-- Description -->
            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Ajoutez une description claire de l’examen...'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <!-- Dates et durée -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    {{ form_label(form.durationMinutes, 'Durée (minutes)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.durationMinutes, {'attr': {'class': 'form-control', 'min': 1}}) }}
                    {{ form_errors(form.durationMinutes) }}
                </div>

                <div class="col-md-4 mb-3">
                    {{ form_label(form.startAt, 'Date de début', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.startAt, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.startAt) }}
                </div>

                <div class="col-md-4 mb-3">
                    {{ form_label(form.endAt, 'Date de fin', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.endAt, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.endAt) }}
                </div>
            </div>

            <!-- Boutons -->
            <div class="d-flex justify-content-between mt-4">
                <div>
                    {{ include('exam/_delete_form.html.twig') }}
                </div>
                <div>
                    <a href="{{ path('app_exam_index') }}" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                    <button type="submit" class="btn btn-warning text-dark">
                        <i class="bi bi-save me-1"></i> Mettre à jour
                    </button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_exam_show', {'id': exam.id}) }}" class="btn btn-outline-info">
            <i class="bi bi-eye"></i> Voir les détails de l’examen
        </a>
    </div>
</div>
{% endblock %}
