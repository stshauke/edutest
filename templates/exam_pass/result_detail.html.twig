{% extends 'base.html.twig' %}

{% block title %}Résultat de l’examen | {{ exam.title }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .result-layout {
      padding-top: 2.5rem;
      padding-bottom: 2.5rem;
    }

    .result-summary-card {
      border-radius: 1.1rem;
      border: 1px solid #e5e7eb;
    }

    .result-score-wrapper {
      text-align: center;
    }

    /* Cercle de note */
    .score-circle {
      width: 82px;
      height: 82px;
      border-radius: 999px;
      background: linear-gradient(135deg, #2563eb, #4f46e5);
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 20px rgba(37, 99, 235, 0.25);
    }

    .score-circle-main {
      font-size: 1.6rem;
      font-weight: 700;
      line-height: 1;
    }

    .score-circle-sub {
      font-size: 0.8rem;
      opacity: 0.9;
      line-height: 1.1;
    }

    /* Badge “Non noté” */
    .score-pill-muted {
      padding: 0.35rem 0.9rem;
      border-radius: 999px;
      border: 1px dashed #9ca3af;
      background: #f9fafb;
      color: #4b5563;
      font-size: 0.85rem;
      font-weight: 500;
      white-space: nowrap;
    }

    .question-card {
      border-radius: 1rem;
      border: 1px solid #e5e7eb;
    }

    .question-header-badge {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: .08em;
    }
  </style>
{% endblock %}

{% block body %}
<div class="container-xl result-layout">

  {# ========= HEADER / RÉSUMÉ ========= #}
  <div class="row justify-content-center mb-4">
    <div class="col-lg-8">
      <div class="result-summary-card card shadow-sm mb-3">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
          <div>
            <div class="text-uppercase small text-muted fw-semibold mb-1" style="letter-spacing:.08em;">
              Résultat de l’examen
            </div>
            <h1 class="h4 text-primary fw-bold mb-1">
              {{ exam.title }}
            </h1>
            {% if exam.description %}
              <p class="text-muted small mb-0">
                {{ exam.description }}
              </p>
            {% endif %}
          </div>

          <div class="result-score-wrapper">
            <div class="text-muted small mb-2">Note finale</div>

            {% if assignment.finalGrade is not null %}
              <div class="score-circle">
                <div class="score-circle-main">{{ assignment.finalGrade }}</div>
                <div class="score-circle-sub">/ 20</div>
              </div>
            {% else %}
              <span class="score-pill-muted">Non noté</span>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

  {# ========= DÉTAIL QUESTION PAR QUESTION ========= #}
  <div class="row justify-content-center">
    <div class="col-lg-9">

      {% for answer in answers %}
        <div class="question-card card shadow-sm mb-4">
          <div class="card-body">
            <div class="d-flex justify-content-between flex-wrap gap-2 mb-2">
              <div>
                <div class="question-header-badge text-muted mb-1">
                  QUESTION {{ loop.index }}
                </div>
                <h5 class="fw-semibold mb-1">
                  {{ answer.question.text }}
                </h5>
              </div>
              <div class="text-end">
                <span class="badge rounded-pill bg-light text-muted mb-1">
                  {{ answer.question.type == 'QCM' ? 'QCM' : 'Réponse ouverte' }}
                </span>
                <div class="small text-muted">
                  {{ answer.question.points }} point{{ answer.question.points > 1 ? 's' : '' }}
                </div>
              </div>
            </div>

            {% if answer.question.type == 'QCM' %}
              {% if answer.question.choices|length > 0 %}
                <ul class="list-group list-group-flush mt-2">
                  {% for choice in answer.question.choices %}
                    {% set isSelected = choice in answer.selectedChoices %}
                    <li class="list-group-item d-flex justify-content-between align-items-center
                        {% if choice.isCorrect %} list-group-item-success
                        {% elseif isSelected %} list-group-item-danger
                        {% endif %}">
                      <span>{{ choice.label }}</span>

                      <div class="d-flex align-items-center gap-2">
                        {% if isSelected %}
                          <span class="badge bg-primary-subtle text-primary border border-primary-subtle">
                            Votre choix
                          </span>
                        {% endif %}
                        {% if choice.isCorrect %}
                          <span class="badge bg-success">
                            Correct
                          </span>
                        {% endif %}
                      </div>
                    </li>
                  {% endfor %}
                </ul>
              {% else %}
                <p class="text-muted fst-italic mb-0 mt-2">Aucun choix disponible.</p>
              {% endif %}
            {% else %}
              <div class="mt-3">
                <p class="small text-muted mb-1">Votre réponse</p>
                <p class="bg-light rounded p-2 mb-0">
                  {{ answer.answerText ?: '— Aucune réponse —' }}
                </p>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}

      <div class="text-center mt-4">
        <a href="{{ path('student_results') }}" class="btn btn-outline-primary">
          <i class="bi bi-arrow-left me-1"></i> Retour à mes résultats
        </a>
      </div>

    </div>
  </div>
</div>
{% endblock %}
